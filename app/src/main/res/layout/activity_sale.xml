<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#201E28"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
    <ImageView
        android:id="@+id/sale_item_list_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/back_arrow" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:text="Продажа телефона"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:text="Заполните поля"/>


    <EditText
        android:id="@+id/sale_item_image_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColorHint="#898989"
        android:textColor="#FFFFFF"
        android:hint="Название изображения (drawable)" />

    <EditText
        android:id="@+id/sale_item_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#898989"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:hint="Производитель" />

    <EditText
        android:id="@+id/sale_item_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#898989"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:hint="Модель" />

    <EditText
        android:id="@+id/sale_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#898989"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:hint="Кр.описание" />

    <EditText
        android:id="@+id/sale_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#898989"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:hint="Описание" />

    <EditText
        android:id="@+id/sale_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#898989"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:hint="Цена"
        android:inputType="number" />

    <Button
        android:id="@+id/sale_item_add_button"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#D5A10F"
        android:text="Продать" />
</LinearLayout>
